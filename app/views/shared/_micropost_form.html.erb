<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", id: "micropost_content" %>
  </div>
  <div class="pull-right"><span id="counter_id" class="pull-left"></span><span class="pull-right">&nbsp;characters remaining</span></div>
  <script>var displaycounter = $("#counter_id");
          $("#micropost_content").limit_characters(140, displaycounter);</script>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>